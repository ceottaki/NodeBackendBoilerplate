{
    "spec_dir": "src",
    "spec_files": [
        "**/*[sS]pec.ts"
    ],
    "stopSpecOnExpectationFailure": false,
    "random": false,
    "reporters": [{
            "name": "jasmine-spec-reporter#SpecReporter",
            "options": {
                "spec": {
                    "displayStacktrace": true
                }
            }
        },
        {
            "name": "jasmine-pretty-html-reporter#Reporter",
            "options": {
                "path": "./"
            }
        }
    ]
}
