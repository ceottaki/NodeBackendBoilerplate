{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": [
                {
                    "base": "$tslint5",
                    "fileLocation": "relative",
                    "applyTo": "allDocuments"
                }
            ]
        }
    ]
}
