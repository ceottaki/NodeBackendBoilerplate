{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Main",
            "type": "node",
            "request": "launch",
            "args": [
                "./src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        },
        {
            "name": "Launch Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jasmine-ts/lib/index.js",
            "args": [
                "--config=./jasmine.json"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        }
    ],
}
